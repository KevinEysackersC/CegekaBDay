<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <base href="~/" />

    <link rel="stylesheet" href="~/dist/css/vendor.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/dist/css/Site.css" />
    <script defer src="https://use.fontawesome.com/releases/v5.0.4/js/all.js"></script>
</head>
<body>
    <header>
        <div id="logo"><img src="~/dist/images/logo-cgk.png" alt="Cegeka Logo" /></div>
        <div id="title"><h1> Birthday calendar</h1></div>
    </header>
    <div>
        @RenderBody()
        <hr />
        <footer class="container">
            <p>&copy; @DateTime.Now.Year - Cegeka</p>
        </footer>
    </div>

    <script src="~/dist/jquery-1.10.2.js"></script>
    <script src="~/dist/bootstrap.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
